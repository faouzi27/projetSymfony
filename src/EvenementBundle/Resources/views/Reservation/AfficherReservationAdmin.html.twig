{% extends "@User/Page_Employer.html.twig" %}
{% block body %}

    <div class="col-lg-20 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Liste Classe</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>

                    <tr>
                        <th><i class="fa fa-bullhorn"></i> id</th>

                        <th><i class="fa fa-bullhorn"></i> Evenement</th>
                        <th class="hidden-phone"><i class="fa fa-question-circle"></i> Client</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for e in event %}
                        <tr>


                            <td>{{ e.id }} </td>
                            <td>{{ e.idevenement.titre }}</td>
                            <td>{{ e.idUser.username }}</td>

                        </tr>
                    </tbody>
                    {% endfor %}

                </table>
            </div>
        </div>
    </div>
    </div>

{% endblock %}