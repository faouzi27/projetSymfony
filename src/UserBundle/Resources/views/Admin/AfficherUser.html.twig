{% extends "@User/Page_Admin.html.twig" %}
{% block body %}

    <div class="col-lg-20 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Liste Eleve Non Affecter</h4>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>
                                id
                            </th>
                            <th>
                                Cin
                            </th>
                            <th>
                                Nom
                            </th>

                            <th>
                                Prenom
                            </th>
                            <th>
                                email
                            </th>
                            <th>
                                date de Naissance
                            </th>

                            <th>
                                Role
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for s in user %}
                            {% for role in s.roles %}
                                {% if role == 'ROLE_ENSEIGNANT' or role == 'ROLE_EMPLOYER' %}
                                    <tr>
                                    <td>
                                        {{ s.id }}
                                    </td>
                                    <td>
                                        {{ s.cin }}
                                    </td>
                                    <td>
                                        {{ s.username }}

                                    </td>
                                    <td>
                                        {{ s.prenom }}

                                    </td>
                                    <td>
                                        {{ s.email }}

                                    </td>
                                    <td>
                                        {{ s.DateNaissance|date }}

                                    </td>

                                    <td>
                                    {{ role }}
                                    </td>

                                {% endif %}
                            {% endfor %}

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}